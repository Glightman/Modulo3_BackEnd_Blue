@{
}

<div class="text-center">
    <h1 class="display-4">LISTA DE MONSTROS</h1>
</div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Ataque</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in ViewBag.monstros)
        {
            <tr>
                <th scope="row">@m.id</th>
                <td>@m.nome</td>
                <td>@m.ataque</td>
            </tr>
        }
    </tbody>
</table>