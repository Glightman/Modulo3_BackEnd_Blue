@model Paciente

<h2>Informe seus dados abaixo: </h2>
<form class="col-md-4" asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome do paciente</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nascimento" class="control-label">Data de Nascimento</label>
        <input asp-for="Nascimento" class="form-control" />
    </div>
    <div class="col-12">
        <input type="submit" class="btn btn-primary" value="Criar!" />
        <a class="btn btn-dark" asp-area="" asp-controller="Paciente" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
