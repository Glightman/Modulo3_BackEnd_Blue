@page
@model WebApplication1.Pages.Alunos.IndexModel
@{
}

<div class="text-center">
    <h1 class="display-4">LISTA DE ALUNOS</h1>
</div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">Idade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.alunos)
            {
        <tr>
            <th scope="row">@a.id</th>
            <td>@a.nome</td>
            <td>@a.data_nasc.ToString("dd/MM/yyyy")</td>
            <td>@a.idade</td>
        </tr>
            }
    </tbody>
</table>
<a class="btn btn-primary" asp-area="" asp-page="/Alunos/Create" role="button">Cadastrar novo Aluno</a>